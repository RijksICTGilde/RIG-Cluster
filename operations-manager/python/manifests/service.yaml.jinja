apiVersion: v1
kind: Service
metadata:
  name: "{{ name }}"
  namespace: "{{ namespace }}"
  labels:
    app: "{{ name }}"
    project: "{{ project.name }}"
spec:
  selector:
    app: "{{ name }}"
    component: application
  ports:
    - port: {{ service_port | default(80) }}
      targetPort: {{ application_port }}
      protocol: TCP
      name: http
  type: ClusterIP